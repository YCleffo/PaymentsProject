<UserControl x:Class="PaymentsProject.ProjectControls.CounterUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaymentsProject.ProjectControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.RowSpan="2" VerticalAlignment="Center" HorizontalAlignment="Right">
            <TextBox x:Name="CountUserControlTextBox"  Width="100" Height="24"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.RowSpan="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
            <Button Content="+" Padding="6 0" Height="24" x:Name="CountUserControlBtnUp"/>
            <Button Content="-" Padding="6 0" Height="24" x:Name="CountUserControlBtnDown"/>
        </StackPanel>
            
    </Grid>
</UserControl>
